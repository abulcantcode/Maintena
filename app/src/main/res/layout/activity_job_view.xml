<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobViewActivity"
    android:background="#DDDDDD"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pageTitle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="35dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/back_arrow"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/title"
                android:text="View Record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/btnSave"
            android:src="@drawable/gear"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/black" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pageTitle"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/scrollContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/btnRequestVerify"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="70dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="@color/white">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Record Details:"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/black"
                            android:maxLines="1"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Record Title:"
                                android:textColor="@color/red_900"
                                android:maxLines="1"/>

                            <TextView
                                android:id="@+id/textTitle"
                                android:padding="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Job Title"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Record Description:"
                                android:textColor="@color/red_900"
                                android:maxLines="1"/>

                            <TextView
                                android:id="@+id/textDescription"
                                android:padding="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Job Description"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Vehicle Millage:"
                                android:textColor="@color/red_900"
                                android:maxLines="1"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="start">

                                <TextView
                                    android:paddingVertical="8dp"
                                    android:paddingStart="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(mi)"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/darkGrey"/>

                                <TextView
                                    android:id="@+id/textMillage"
                                    android:paddingVertical="8dp"
                                    android:paddingStart="4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="Vehicle Millage"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/darkGrey"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Price Paid:"
                                android:textColor="@color/red_900"
                                android:maxLines="1"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="start">

                                <TextView
                                    android:paddingVertical="8dp"
                                    android:paddingStart="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Â£"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/darkGrey"/>

                                <TextView
                                    android:id="@+id/textPrice"
                                    android:paddingVertical="8dp"
                                    android:paddingStart="4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="Price"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/darkGrey"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Date of Record:"
                                android:textColor="@color/red_900"
                                android:maxLines="1"/>

                            <TextView
                                android:id="@+id/textDate"
                                android:padding="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Date"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="@color/white"
                        android:layout_marginVertical="26dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Garage / Dealer Details:"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/black"
                            android:maxLines="1"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Garage / Dealer Name:"
                                android:textColor="@color/blue_700"
                                android:maxLines="1"/>

                            <TextView
                                android:id="@+id/textName"
                                android:padding="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Garage / Dealer Name"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Contact Email:"
                                android:textColor="@color/blue_700"
                                android:maxLines="1"/>

                            <TextView
                                android:id="@+id/textEmail"
                                android:padding="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Contact Email"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Contact Number:"
                                android:textColor="@color/blue_700"
                                android:maxLines="1"/>

                            <TextView
                                android:id="@+id/textPhone"
                                android:padding="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Contact Number"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Garage / Dealer Address:"
                                android:textColor="@color/blue_700"
                                android:maxLines="1"/>

                            <TextView
                                android:id="@+id/textAddress"
                                android:padding="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Address"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Garage / Dealer Address:"
                                android:textColor="@color/blue_700"
                                android:maxLines="1"/>

                            <TextView
                                android:id="@+id/textPostcode"
                                android:padding="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Postcode"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Record Verification Status:"
                                android:textColor="@color/blue_700"
                                android:maxLines="1"/>

                            <TextView
                                android:id="@+id/textVerify"
                                android:padding="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Verified"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey"
                                android:drawableRight="@drawable/verified"
                                android:drawableTint="#2196F3"/>

                            <TextView
                                android:id="@+id/textNotVerify"
                                android:padding="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Pending Verification"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey"
                                android:drawableRight="@drawable/verified"
                                android:drawableTint="@color/chalk"/>

                            <TextView
                                android:id="@+id/textReject"
                                android:padding="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Verification Rejected"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey"
                                android:drawableRight="@drawable/warning"/>

                            <LinearLayout
                                android:id="@+id/layoutRejection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Reason for Rejection:"
                                    android:textColor="@color/blue_700"
                                    android:maxLines="1"/>

                                <TextView
                                    android:id="@+id/textComment"
                                    android:padding="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Comment"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/darkGrey"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="@color/white"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_marginVertical="10dp">

                            <ImageView
                                android:id="@+id/imgReceipt"
                                android:layout_width="320dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/no_pic"
                                android:scaleType="fitCenter" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <Button
            android:id="@+id/btnRequestVerify"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:backgroundTint="@color/red_700"
            android:text="Request Verification"
            android:textColor="@color/white"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>