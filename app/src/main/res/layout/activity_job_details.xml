<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobDetailsActivity"
    android:background="#DDDDDD"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="35dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/back_arrow"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a Record"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/gear"
            app:tint="@color/black" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pageTitle"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/btnAddJob"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="70dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="@color/white"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxStrokeColor="@color/red_700"
                                app:hintTextColor="@color/red_700"
                                android:textColor="@color/black"
                                android:background="@color/white"
                                android:hint="Job Title"
                                android:textColorHint="@color/darkGrey"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                                <AutoCompleteTextView
                                    android:id="@+id/dropDownJobList"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:maxLines="1">

                                </AutoCompleteTextView>

                            </com.google.android.material.textfield.TextInputLayout>

                            <EditText
                                android:id="@+id/textDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="Job Description"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey" />

                            <EditText
                                android:id="@+id/textMillage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="Vehicle Millage (Miles)"
                                android:inputType="number"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey" />

                            <EditText
                                android:id="@+id/textPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="Price (Â£)"
                                android:inputType="numberDecimal"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey"
                                android:maxLines="1"/>

                            <Button
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:id="@+id/datePicker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Jan 01 2023"
                                style="@style/Widget.AppCompat.Spinner"
                                android:padding="4dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/manualEnter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="26dp"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="@color/white"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <EditText
                                android:id="@+id/editName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Garage / Dealer Name"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey"
                                android:maxLines="1"/>

                            <EditText
                                android:id="@+id/editAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="Address"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey" />

                            <EditText
                                android:id="@+id/editPostcode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="Postcode"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey"
                                android:maxLines="1"/>

                            <EditText
                                android:id="@+id/editPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="Contact"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey"
                                android:maxLines="1"/>

                            <EditText
                                android:id="@+id/editEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="Contact Email"
                                android:inputType="textEmailAddress"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey" />

                            <Button
                                android:id="@+id/btnAutoFind"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:backgroundTint="@color/red_700"
                                android:paddingHorizontal="60dp"
                                android:layout_marginTop="10dp"
                                android:text="Auto find"
                                android:textColor="@color/white"
                                app:cornerRadius="10dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/autoFind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="26dp"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="@color/white"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <EditText
                                android:id="@+id/textEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="Garage / Dealer Email"
                                android:inputType="textEmailAddress"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start">

                                <Button
                                    android:id="@+id/btnSearch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:backgroundTint="@color/blue_500"
                                    android:paddingHorizontal="30dp"
                                    android:text="Search"
                                    android:textColor="@color/white"
                                    app:cornerRadius="10dp"/>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/textName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Garage / Dealer Name"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey" />

                            <TextView
                                android:id="@+id/textPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="Contact Number"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey" />

                            <TextView
                                android:id="@+id/textAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="Address"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey" />

                            <TextView
                                android:id="@+id/textPostcode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="Postcode"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkGrey" />

                            <Button
                                android:id="@+id/btnManualEnter"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:backgroundTint="@color/red_700"
                                android:paddingHorizontal="60dp"
                                android:layout_marginTop="10dp"
                                android:text="Custom Input"
                                android:textColor="@color/white"
                                app:cornerRadius="10dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="@color/white"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:layout_marginBottom="10dp">

                        <Button
                            android:id="@+id/uploadReceipt"
                            android:layout_width="wrap_content"
                            android:layout_height="62dp"
                            android:backgroundTint="@color/red_700"
                            android:paddingHorizontal="60dp"
                            android:text="UPLOAD RECEIPT"
                            android:textColor="@color/white"
                            app:cornerRadius="10dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="30dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/imgReceipt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/no_pic" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <Button
            android:id="@+id/btnAddJob"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:backgroundTint="@color/red_700"
            android:text="ADD JOB"
            android:textColor="@color/white"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>